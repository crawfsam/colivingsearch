<% layout('./layouts/boilerplate')%>
<div class="row">
	<h2 class="text-center">Edit Coliving</h2>
	<div class="col-6 offset-3">
        <form action="/coliving/<%=coliving._id%>?_method=PUT" method="POST" novalidate class="needs-validation">
			<div class="mb-3">
				<label class="form-label" for="title">Name</label>
				<input class="form-control" type="text" id="title" name="coliving[name]" value="<%=coliving.name %>" required>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="city">City</label>
				<input class="form-control" type="text" id="city" name="coliving[city]" value="<%=coliving.city %>" required>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="country">Country</label>
				<input class="form-control" type="text" id="country" name="coliving[country]" value="<%=coliving.country %>" required>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="address">Address</label>
				<input class="form-control" type="text" id="address" name="coliving[address]" value="<%=coliving.address %>" required>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="url">URL</label>
				<input class="form-control" type="text" id="url" name="coliving[url]" value="<%=coliving.url %>" required>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple >
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Add image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
			</div>
			<div class="mb-3">
                <% coliving.images.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
                <% })%>
            </div>
			<div class="mb-3">
				<button class="btn btn-success mb-3">Update Coliving</button>
			</div>
		</form>
		<a href="/coliving">Back to Coliving Search</a>
	</div>
</div>

